<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>GetListCategoryController</servlet-name>
        <servlet-class>com.example.assignmentjspservlet.controller.category.GetListCategoryController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetListCategoryController</servlet-name>
        <url-pattern>/admin/categories/list</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CreateCategoryController</servlet-name>
        <servlet-class>com.example.assignmentjspservlet.controller.category.CreateCategoryController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateCategoryController</servlet-name>
        <url-pattern>/admin/categories/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateCategoryController</servlet-name>
        <servlet-class>com.example.assignmentjspservlet.controller.category.UpdateCategoryController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateCategoryController</servlet-name>
        <url-pattern>/admin/categories/update</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteCategoryController</servlet-name>
        <servlet-class>com.example.assignmentjspservlet.controller.category.DeleteCategoryController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteCategoryController</servlet-name>
        <url-pattern>/admin/categories/delete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GetListProductController</servlet-name>
        <servlet-class>com.example.assignmentjspservlet.controller.product.GetListProductController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetListProductController</servlet-name>
        <url-pattern>/admin/products/list</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CreateProductController</servlet-name>
        <servlet-class>com.example.assignmentjspservlet.controller.product.CreateProductController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateProductController</servlet-name>
        <url-pattern>/admin/products/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateProductController</servlet-name>
        <servlet-class>com.example.assignmentjspservlet.controller.product.UpdateProductController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateProductController</servlet-name>
        <url-pattern>/admin/products/update</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteProductController</servlet-name>
        <servlet-class>com.example.assignmentjspservlet.controller.product.DeleteProductController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteProductController</servlet-name>
        <url-pattern>/admin/products/delete</url-pattern>
    </servlet-mapping>

</web-app>